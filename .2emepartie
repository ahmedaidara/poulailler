// Fonction pour calculer le CA
function calculateProductionRevenue(production) {
    return (production.small1Sold || 0) * (production.small1Price || 0) +
           (production.small2Sold || 0) * (production.small2Price || 0) +
           (production.medium1Sold || 0) * (production.medium1Price || 0) +
           (production.medium2Sold || 0) * (production.medium2Price || 0) +
           (production.large1Sold || 0) * (production.large1Price || 0) +
           (production.large2Sold || 0) * (production.large2Price || 0) +
           (production.xlarge1Sold || 0) * (production.xlarge1Price || 0) +
           (production.xlarge2Sold || 0) * (production.xlarge2Price || 0);
}

