      // Fonction pour calculer les ventes réelles d'un stock
async function calculateActualSalesForStock(stockId, categories) {
    console.log('Calcul ventes réelles pour stock:', stockId);
    
    const ventesParCategorie = {};
    
    // Initialiser à 0 pour chaque catégorie
    categories.forEach(cat => {
        ventesParCategorie[cat.id] = 0;
    });
    
    try {
        // Charger TOUTES les factures pour CETTE boutique et CE stock
        const snapshot = await db.collection('invoices')
            .where('stockAttribueId', '==', stockId)
            .get();
        
        console.log(`📊 ${snapshot.size} factures trouvées pour ce stock`);
        
        snapshot.forEach(doc => {
            const facture = doc.data();
            
            if (facture.items && Array.isArray(facture.items)) {
                facture.items.forEach(item => {
                    const catId = item.id.toString();
                    if (ventesParCategorie.hasOwnProperty(catId)) {
                        ventesParCategorie[catId] += item.quantity || 0;
                    }
                });
            }
        });
        
        console.log("📦 Ventes calculées:", ventesParCategorie);
        return ventesParCategorie;
        
    } catch (error) {
        console.error("❌ Erreur calcul ventes:", error);
        return ventesParCategorie;
    }
}

