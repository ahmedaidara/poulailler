// Ajouter une ligne de dépense
function addExpenseRow() {
    const tbody = document.getElementById('expenseItemsBody');
    const template = document.getElementById('expenseRowTemplate');
    
    const newRow = template.cloneNode(true);
    newRow.id = '';
    newRow.style.display = '';
    
    // Générer un ID unique pour la ligne
    const rowId = 'expenseRow_' + Date.now() + '_' + Math.random().toString(36).substr(2, 9);
    newRow.dataset.rowId = rowId;
    
    tbody.appendChild(newRow);
    
    // Focus sur le champ Nom
    setTimeout(() => {
        newRow.querySelector('.expense-name').focus();
    }, 100);
    
    // Recalculer les totaux
    calculateExpenseTotals();
}

// Supprimer une ligne de dépense
function removeExpenseRow(button) {
    const row = button.closest('tr');
    if (row && !row.id.includes('Template')) {
        row.remove();
        calculateExpenseTotals();
    }
}

// Calculer le total d'une ligne
function calculateRowTotal(input) {
    const row = input.closest('tr');
    const qty = parseFloat(row.querySelector('.expense-qty').value) || 0;
    const price = parseFloat(row.querySelector('.expense-price').value) || 0;
    const total = qty * price;
    
    row.querySelector('.expense-total').value = total.toLocaleString('fr-FR');
    
    // Recalculer le total général
    calculateExpenseTotals();
}

// Calculer tous les totaux
function calculateExpenseTotals() {
    let totalExpense = 0;
    
    // Calculer total des dépenses
    document.querySelectorAll('#expenseItemsBody tr').forEach(row => {
        if (row.style.display !== 'none') {
            const totalInput = row.querySelector('.expense-total');
            if (totalInput) {
                const total = parseFloat(totalInput.value.replace(/\s/g, '').replace('FCFA', '')) || 0;
                totalExpense += total;
            }
        }
    });
    
    // Mettre à jour l'affichage
    document.getElementById('totalExpenseAmount').value = totalExpense.toLocaleString('fr-FR') + ' F CFA';
    document.getElementById('totalExpenseDisplay').textContent = totalExpense.toLocaleString('fr-FR') + ' F CFA';
    
    // CA utilisé
    const customRevenueInput = document.getElementById('customRevenue');
    const usedRevenue = customRevenueInput.value ? parseFloat(customRevenueInput.value) : currentExpenseProduction.revenue;
    
    document.getElementById('usedRevenueDisplay').textContent = usedRevenue.toLocaleString('fr-FR') + ' F CFA';
    
    // Bénéfice net
    const netProfit = usedRevenue - totalExpense;
    const netProfitDisplay = document.getElementById('netProfitDisplay');
    netProfitDisplay.textContent = netProfit.toLocaleString('fr-FR') + ' F CFA';
    netProfitDisplay.style.color = netProfit >= 0 ? 'var(--secondary)' : 'var(--danger)';
}

// Sauvegarder la dépense
function saveExpense() {
    if (!currentExpenseProduction) return;
    
    // Récupérer les lignes de dépense
    const expenseItems = [];
    let totalExpense = 0;
    
    document.querySelectorAll('#expenseItemsBody tr').forEach(row => {
        if (row.style.display !== 'none') {
            const name = row.querySelector('.expense-name').value.trim();
            const desc = row.querySelector('.expense-desc').value.trim();
            const qty = parseFloat(row.querySelector('.expense-qty').value) || 0;
            const price = parseFloat(row.querySelector('.expense-price').value) || 0;
            const total = qty * price;
            
            if (name && total > 0) {
                expenseItems.push({
                    name: name,
                    description: desc,
                    quantity: qty,
                    unitPrice: price,
                    total: total
                });
                
                totalExpense += total;
            }
        }
    });
    
    if (expenseItems.length === 0) {
        showMessage('Veuillez ajouter au moins une dépense', 'error');
        return;
    }
    
    // CA personnalisé
    const customRevenueInput = document.getElementById('customRevenue');
    const customRevenue = customRevenueInput.value ? parseFloat(customRevenueInput.value) : null;
    
    // Notes
    const notes = document.getElementById('expenseNotes').value.trim();
    
    // Données à sauvegarder
    const expenseData = {
        productionId: currentExpenseProduction.id,
        productionDate: currentExpenseProduction.data.startDate,
        expenseItems: expenseItems,
        totalExpense: totalExpense,
        customRevenue: customRevenue,
        realRevenue: currentExpenseProduction.revenue,
        usedRevenue: customRevenue || currentExpenseProduction.revenue,
        netProfit: (customRevenue || currentExpenseProduction.revenue) - totalExpense,
        notes: notes,
        createdAt: firebase.firestore.FieldValue.serverTimestamp(),
        updatedAt: firebase.firestore.FieldValue.serverTimestamp()
    };
    
    // Vérifier si on est en mode édition
    if (currentExpenseEditing) {
        // Mode édition
        db.collection('expenses').doc(currentExpenseEditing).update(expenseData)
            .then(() => {
                showMessage('Dépense mise à jour avec succès!', 'success');
                currentExpenseEditing = null;
                loadProductionsForExpenses();
            })
            .catch(error => {
                console.error('Erreur mise à jour:', error);
                showMessage('Erreur lors de la mise à jour', 'error');
            });
    } else {
        // Mode création - Vérifier si une dépense existe déjà
        db.collection('expenses')
            .where('productionId', '==', currentExpenseProduction.id)
            .get()
            .then(snapshot => {
                if (!snapshot.empty) {
                    if (confirm('Une dépense existe déjà pour cette production. Voulez-vous la remplacer ?')) {
                        // Supprimer l'ancienne et créer la nouvelle
                        const batch = db.batch();
                        snapshot.forEach(doc => {
                            batch.delete(doc.ref);
                        });
                        
                        batch.commit().then(() => {
                            db.collection('expenses').add(expenseData)
                                .then(() => {
                                    showMessage('Dépense enregistrée avec succès!', 'success');
                                    loadProductionsForExpenses();
                                });
                        });
                    }
                } else {
                    // Créer nouvelle dépense
                    db.collection('expenses').add(expenseData)
                        .then(() => {
                            showMessage('Dépense enregistrée avec succès!', 'success');
                            loadProductionsForExpenses();
                        });
                }
            })
            .catch(error => {
                console.error('Erreur vérification:', error);
                // Créer directement
                db.collection('expenses').add(expenseData)
                    .then(() => {
                        showMessage('Dépense enregistrée avec succès!', 'success');
                        loadProductionsForExpenses();
                    });
            });
    }
}

