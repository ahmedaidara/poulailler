// Générer PDF pour dépense
async function generateExpensePDF(expense, options) {
    showMessage('Préparation du PDF...', 'warning');
    
    const { jsPDF } = window.jspdf;
    const doc = new jsPDF({
        orientation: options.orientation,
        unit: 'mm',
        format: 'a4'
    });
    
    let currentY = 20;
    const pageWidth = doc.internal.pageSize.getWidth();
    const margin = 15;
    
    // En-tête
    doc.setFontSize(24);
    doc.setFont("helvetica", "bold");
    doc.setTextColor(30, 41, 59);
    doc.text("RAPPORT DE DÉPENSES", pageWidth / 2, currentY, { align: 'center' });
    
    doc.setFontSize(12);
    doc.setFont("helvetica", "normal");
    doc.setTextColor(100, 100, 100);
    
    const prodDate = new Date(expense.productionDate);
    const expenseDate = expense.createdAt?.toDate() || new Date();
    
    doc.text(`Production du: ${prodDate.toLocaleDateString('fr-FR')}`, margin, currentY + 10);
    doc.text(`Dépense du: ${expenseDate.toLocaleDateString('fr-FR')}`, pageWidth - margin, currentY + 10, { align: 'right' });
    
    currentY += 25;
    
    // Informations CA
    doc.setFontSize(14);
    doc.setFont("helvetica", "bold");
    doc.setTextColor(59, 130, 246);
    doc.text("CHIFFRE D'AFFAIRES", margin, currentY);
    currentY += 10;
    
    doc.setFontSize(11);
    doc.setFont("helvetica", "normal");
    doc.setTextColor(30, 41, 59);
    
    doc.text(`CA réel de la production: ${expense.realRevenue?.toLocaleString('fr-FR') || '0'} F CFA`, margin, currentY);
    currentY += 7;
    
    if (expense.customRevenue) {
        doc.setTextColor(245, 158, 11);
        doc.text(`CA utilisé pour calcul (personnalisé): ${expense.usedRevenue?.toLocaleString('fr-FR') || '0'} F CFA`, margin, currentY);
    } else {
        doc.text(`CA utilisé pour calcul: ${expense.usedRevenue?.toLocaleString('fr-FR') || '0'} F CFA`, margin, currentY);
    }
    currentY += 10;
    
    // Détails des dépenses
    if (options.includeDetails && expense.expenseItems && expense.expenseItems.length > 0) {
        if (currentY > 200) {
            doc.addPage();
            currentY = 20;
        }
        
        doc.setFontSize(14);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(59, 130, 246);
        doc.text("DÉTAIL DES DÉPENSES", margin, currentY);
        currentY += 10;
        
        const tableData = [
            ['Nom', 'Description', 'Qty', 'Prix unitaire', 'Total']
        ];
        
        expense.expenseItems.forEach(item => {
            tableData.push([
                item.name,
                item.description || '-',
                item.quantity.toString(),
                `${item.unitPrice?.toLocaleString('fr-FR')} F CFA`,
                `${item.total?.toLocaleString('fr-FR')} F CFA`
            ]);
        });
        
        // Total
        tableData.push([
            '', '', '', 'TOTAL:',
            `${expense.totalExpense?.toLocaleString('fr-FR')} F CFA`
        ]);
        
        doc.autoTable({
            startY: currentY,
            head: [tableData[0]],
            body: tableData.slice(1, -1),
            foot: [tableData[tableData.length - 1]],
            margin: { left: margin, right: margin },
            styles: { fontSize: 9, cellPadding: 3 },
            headStyles: { fillColor: [59, 130, 246], textColor: [255, 255, 255] },
            footStyles: { fillColor: [239, 68, 68], textColor: [255, 255, 255] },
            alternateRowStyles: { fillColor: [240, 240, 240] }
        });
        
        currentY = doc.lastAutoTable.finalY + 10;
    }
    
    // Résumé financier
    if (options.includeSummary) {
        if (currentY > 200) {
            doc.addPage();
            currentY = 20;
        }
        
        doc.setFontSize(14);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(59, 130, 246);
        doc.text("RÉSUMÉ FINANCIER", margin, currentY);
        currentY += 10;
        
        doc.setFontSize(12);
        doc.setFont("helvetica", "normal");
        
        doc.text(`Chiffre d'Affaires utilisé:`, margin, currentY);
        doc.text(`${expense.usedRevenue?.toLocaleString('fr-FR') || '0'} F CFA`, pageWidth - margin, currentY, { align: 'right' });
        currentY += 8;
        
        doc.setTextColor(239, 68, 68);
        doc.text(`Total des Dépenses:`, margin, currentY);
        doc.text(`${expense.totalExpense?.toLocaleString('fr-FR') || '0'} F CFA`, pageWidth - margin, currentY, { align: 'right' });
        currentY += 10;
        
        // Ligne de séparation
        doc.setDrawColor(200, 200, 200);
        doc.line(margin, currentY, pageWidth - margin, currentY);
        currentY += 10;
        
        // Bénéfice net
        doc.setFontSize(14);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(expense.netProfit >= 0 ? [16, 185, 129] : [239, 68, 68]);
        
        doc.text(`BÉNÉFICE NET:`, margin, currentY);
        doc.text(`${expense.netProfit?.toLocaleString('fr-FR') || '0'} F CFA`, pageWidth - margin, currentY, { align: 'right' });
        currentY += 15;
        
        // Taux de rentabilité
        if (expense.usedRevenue > 0) {
            const profitMargin = (expense.netProfit / expense.usedRevenue) * 100;
            doc.setFontSize(11);
            doc.setFont("helvetica", "normal");
            doc.setTextColor(100, 100, 100);
            
            doc.text(`Marge: ${profitMargin.toFixed(1)}%`, pageWidth - margin, currentY, { align: 'right' });
            currentY += 10;
        }
    }
    
    // Notes
    if (options.includeNotes && expense.notes) {
        if (currentY > 200) {
            doc.addPage();
            currentY = 20;
        }
        
        doc.setFontSize(14);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(59, 130, 246);
        doc.text("NOTES", margin, currentY);
        currentY += 10;
        
        doc.setFontSize(11);
        doc.setFont("helvetica", "normal");
        doc.setTextColor(30, 41, 59);
        
        const lines = doc.splitTextToSize(expense.notes, pageWidth - 2 * margin);
        doc.text(lines, margin, currentY);
        currentY += lines.length * 5 + 10;
    }
    
    // Pied de page
    const totalPages = doc.internal.getNumberOfPages();
    for (let i = 1; i <= totalPages; i++) {
        doc.setPage(i);
        doc.setFontSize(10);
        doc.setTextColor(100, 100, 100);
        doc.text(`Page ${i} / ${totalPages}`, pageWidth / 2, 290, { align: 'center' });
        doc.text("© 2026 DAKAR CHICKEN EXPRESS - Gestion des Dépenses", pageWidth / 2, 295, { align: 'center' });
    }
    
    // Sauvegarder
    const fileName = `Depense_${prodDate.toISOString().slice(0,10)}_${expenseDate.toISOString().slice(0,10)}.pdf`;
    doc.save(fileName);
    
    showMessage('PDF généré avec succès!', 'success');
}

