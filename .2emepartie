<div id="printExpenseModal" class="modal-overlay">
    <div class="modal" style="max-width: 600px;">
        <div class="modal-header">
            <h2 class="modal-title"><i class="fas fa-print"></i> Options d'Impression</h2>
            <button class="close-modal" onclick="hideModal('printExpenseModal')">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div style="padding: var(--space-xl);">
            <div class="option-group">
                <h3 style="margin-bottom: var(--space-md);">Options de rapport</h3>
                
                <div class="option-item">
                    <input type="checkbox" id="printExpenseDetails" class="checkbox" checked>
                    <label for="printExpenseDetails">Détails complets des dépenses</label>
                </div>
                
                <div class="option-item">
                    <input type="checkbox" id="printExpenseSummary" class="checkbox" checked>
                    <label for="printExpenseSummary">Résumé financier</label>
                </div>
                
                <div class="option-item">
                    <input type="checkbox" id="printExpenseNotes" class="checkbox" checked>
                    <label for="printExpenseNotes">Notes et observations</label>
                </div> 
                
                <div class="option-item">
                    <label for="printOrientation" class="form-label" style="display: block; margin-bottom: var(--space-sm);">Orientation :</label>
                    <select id="printOrientation" class="form-input">
                        <option value="portrait">Portrait</option>
                        <option value="landscape">Paysage</option>
                    </select>
                </div>
            </div>
        </div>
        
        <div class="modal-actions">
            <button class="btn btn-secondary" onclick="hideModal('printExpenseModal')">
                <i class="fas fa-times"></i> Annuler
            </button>
            <button id="confirmPrintExpenseBtn" class="btn btn-primary">
                <i class="fas fa-print"></i> Générer le PDF
            </button>
        </div>
    </div>
</div>
       <div id="depense-container" style="display: none; position: fixed; top: 60px; left: 0; right: 0; bottom: 0; width: 100%; background: white; z-index: 999;">
    <button onclick="fermerDepense()" style="position: absolute; top: 10px; right: 20px; z-index: 1000; padding: 8px 16px; background: #ff4444; color: white; border: none; border-radius: 5px; cursor: pointer;">
        <i class="fas fa-times"></i> Fermer
    </button>
    <iframe id="depense-iframe" src="" style="width: 100%; height: 100%; border: none;"></iframe>
</div>
       
</body>
 </html>
