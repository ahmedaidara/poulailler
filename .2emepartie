// Ajouter une ligne avec des données existantes
function addExpenseRowWithData(item) {
    const tbody = document.getElementById('expenseItemsBody');
    const template = document.getElementById('expenseRowTemplate');
    
    if (!template) {
        // Créer un template si inexistant
        const templateRow = document.createElement('tr');
        templateRow.id = 'expenseRowTemplate';
        templateRow.style.display = 'none';
        templateRow.innerHTML = `
            <td><input type="text" class="form-input expense-name" placeholder="Ex: Nourriture" style="width: 100%;"></td>
            <td><input type="text" class="form-input expense-desc" placeholder="Ex: Achat de maïs" style="width: 100%;"></td>
            <td><input type="number" class="form-input expense-qty" min="0" step="1" value="1" style="width: 100%;" oninput="calculateRowTotal(this)"></td>
            <td><input type="number" class="form-input expense-price" min="0" step="100" value="0" style="width: 100%;" oninput="calculateRowTotal(this)"></td>
            <td><input type="text" class="form-input expense-total" value="0" readonly style="width: 100%; background: var(--light-gray);"></td>
            <td><button type="button" class="action-btn-small delete" onclick="removeExpenseRow(this)" title="Supprimer">
                <i class="fas fa-trash"></i>
            </button></td>
        `;
        tbody.appendChild(templateRow);
    }
    
    const newRow = document.getElementById('expenseRowTemplate').cloneNode(true);
    newRow.id = '';
    newRow.style.display = '';
    
    // Remplir avec les données
    newRow.querySelector('.expense-name').value = item.name || '';
    newRow.querySelector('.expense-desc').value = item.description || '';
    newRow.querySelector('.expense-qty').value = item.quantity || 0;
    newRow.querySelector('.expense-price').value = item.unitPrice || 0;
    newRow.querySelector('.expense-total').value = (item.total || 0).toLocaleString('fr-FR');
    
    tbody.appendChild(newRow);
}

// Supprimer une dépense
function deleteExpense(expenseId, event) {
    if (event) event.stopPropagation();
    
    if (confirm('Voulez-vous vraiment supprimer cette dépense ?')) {
        db.collection('expenses').doc(expenseId).delete()
            .then(() => {
                showMessage('Dépense supprimée avec succès', 'success');
                loadProductionsForExpenses();
            })
            .catch(error => {
                console.error('Erreur suppression:', error);
                showMessage('Erreur lors de la suppression', 'error');
            });
    }
}

