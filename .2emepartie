function createSimpleChart(type, data, labels, colors, title) {
    try {
        const canvas = document.createElement('canvas');
        canvas.width = 600;
        canvas.height = 400;
        const ctx = canvas.getContext('2d');
        
         
        if (typeof Chart === 'undefined') {
            console.error("Chart.js n'est pas chargé");
            return null;
        }
        
        return new Promise((resolve) => {
             
            setTimeout(() => {
                try {
                    new Chart(ctx, {
                        type: type,
                        data: {
                            labels: labels,
                            datasets: [{
                                data: data,
                                backgroundColor: colors,
                                borderColor: colors.map(c => c.replace('0.8', '1')),
                                borderWidth: 2
                            }]
                        },
                        options: {
                            responsive: false,
                            plugins: {
                                title: {
                                    display: true,
                                    text: title,
                                    font: { size: 14, weight: 'bold' }
                                },
                                legend: {
                                    display: type !== 'bar'
                                }
                            }
                        }
                    });
                    
                     
                    setTimeout(() => {
                        resolve(canvas);
                    }, 100);
                    
                } catch (error) {
                    console.error("Erreur création graphique:", error);
                    resolve(null);
                }
            }, 50);
        });
        
    } catch (error) {
        console.error("Erreur création canvas:", error);
        return Promise.resolve(null);
    }
}

 
async function generateChartsForPDF(records, chartOptions) {
    const charts = [];
    
    try {
        // Vérifier si des graphiques sont demandés
        const anyChartRequested = chartOptions.chartSales || chartOptions.chartEvolution || 
                                 chartOptions.chartRevenue || chartOptions.chartLoss || 
                                 chartOptions.chartGrowth;
        
        if (!anyChartRequested) {
            console.log("Aucun graphique demandé");
            return charts;
        }
        
        console.log("Génération des graphiques demandés:", chartOptions);
        
        // 1. GRAPHIQUE DES VENTES PAR CATÉGORIE
        if (chartOptions.chartSales) {
            try {
                const cat1 = records.reduce((sum, r) => sum + (r.small1Sold || 0), 0);
                const cat2 = records.reduce((sum, r) => sum + (r.small2Sold || 0), 0);
                const cat3 = records.reduce((sum, r) => sum + (r.medium1Sold || 0), 0);
                const cat4 = records.reduce((sum, r) => sum + (r.medium2Sold || 0), 0);
                const cat5 = records.reduce((sum, r) => sum + (r.large1Sold || 0), 0);
                const cat6 = records.reduce((sum, r) => sum + (r.large2Sold || 0), 0);
                const cat7 = records.reduce((sum, r) => sum + (r.xlarge1Sold || 0), 0);
                const cat8 = records.reduce((sum, r) => sum + (r.xlarge2Sold || 0), 0);
                
                const totalVentes = cat1 + cat2 + cat3 + cat4 + cat5 + cat6 + cat7 + cat8;
                
                if (totalVentes > 0) {
                    const salesCanvas = await createSimpleChart(
                        'bar',
                        [cat1, cat2, cat3, cat4, cat5, cat6, cat7, cat8],
                        ['Très P', 'Petits', 'Moy-P', 'Moyens', 'Moy-G', 'Grands', 'Très G', 'Géants'],
                        [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(14, 165, 233, 0.8)',
                            'rgba(20, 184, 166, 0.8)',
                            'rgba(251, 191, 36, 0.8)'
                        ],
                        'Ventes par catégorie'
                    );
                    
                    if (salesCanvas) {
                        charts.push({
                            title: "VENTES PAR CATÉGORIE (8 NIVEAUX)",
                            canvas: salesCanvas,
                            width: 180,
                            height: 120
                        });
                        console.log("Graphique ventes généré");
                    }
                } else {
                    console.log("Pas de ventes pour générer le graphique");
                }
            } catch (error) {
                console.error("Erreur graphique ventes:", error);
            }
        }
        
        // 2. GRAPHIQUE ÉVOLUTION DES STOCKS
        if (chartOptions.chartEvolution && records.length > 1) {
            try {
                // Prendre les 8 derniers records maximum
                const recentRecords = records.slice(0, Math.min(8, records.length)).reverse();
                
                if (recentRecords.length >= 2) {
                    const dates = recentRecords.map(r => {
                        const d = new Date(r.startDate);
                        return `${d.getDate()}/${d.getMonth() + 1}`;
                    });
                    
                    const stocks = recentRecords.map(r => r.initialStock || 0);
                    
                    const evolutionCanvas = await createSimpleChart(
                        'line',
                        stocks,
                        dates,
                        ['rgba(59, 130, 246, 0.8)'],
                        'Évolution du stock initial'
                    );
                    
                    if (evolutionCanvas) {
                        charts.push({
                            title: "ÉVOLUTION DU STOCK",
                            canvas: evolutionCanvas,
                            width: 180,
                            height: 120
                        });
                        console.log("Graphique évolution généré");
                    }
                } else {
                    console.log("Pas assez d'enregistrements pour l'évolution");
                }
            } catch (error) {
                console.error("Erreur graphique évolution:", error);
            }
        }
        
        // 3. GRAPHIQUE RÉPARTITION DU CHIFFRE D'AFFAIRES
        if (chartOptions.chartRevenue) {
            try {
                const rev1 = records.reduce((sum, r) => sum + ((r.small1Sold || 0) * (r.small1Price || 0)), 0);
                const rev2 = records.reduce((sum, r) => sum + ((r.small2Sold || 0) * (r.small2Price || 0)), 0);
                const rev3 = records.reduce((sum, r) => sum + ((r.medium1Sold || 0) * (r.medium1Price || 0)), 0);
                const rev4 = records.reduce((sum, r) => sum + ((r.medium2Sold || 0) * (r.medium2Price || 0)), 0);
                const rev5 = records.reduce((sum, r) => sum + ((r.large1Sold || 0) * (r.large1Price || 0)), 0);
                const rev6 = records.reduce((sum, r) => sum + ((r.large2Sold || 0) * (r.large2Price || 0)), 0);
                const rev7 = records.reduce((sum, r) => sum + ((r.xlarge1Sold || 0) * (r.xlarge1Price || 0)), 0);
                const rev8 = records.reduce((sum, r) => sum + ((r.xlarge2Sold || 0) * (r.xlarge2Price || 0)), 0);
                
                const totalRevenue = rev1 + rev2 + rev3 + rev4 + rev5 + rev6 + rev7 + rev8;
                
                if (totalRevenue > 0) {
                    const revenueCanvas = await createSimpleChart(
                        'doughnut',
                        [rev1, rev2, rev3, rev4, rev5, rev6, rev7, rev8],
                        ['Très P', 'Petits', 'Moy-P', 'Moyens', 'Moy-G', 'Grands', 'Très G', 'Géants'],
                        [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(139, 92, 246, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(14, 165, 233, 0.8)',
                            'rgba(20, 184, 166, 0.8)',
                            'rgba(251, 191, 36, 0.8)'
                        ],
                        'Répartition du chiffre d\'affaires'
                    );
                    
                    if (revenueCanvas) {
                        charts.push({
                            title: "RÉPARTITION DU CA",
                            canvas: revenueCanvas,
                            width: 180,
                            height: 120
                        });
                        console.log("Graphique CA généré");
                    }
                } else {
                    console.log("Pas de CA pour générer le graphique");
                }
            } catch (error) {
                console.error("Erreur graphique CA:", error);
            }
        }
        
        // 4. GRAPHIQUE ANALYSE DES PERTES ET DONS
        if (chartOptions.chartLoss) {
            try {
                const totalLost = records.reduce((sum, r) => sum + (r.lost || 0), 0);
                const totalGiven = records.reduce((sum, r) => sum + (r.given || 0), 0);
                const totalSold = records.reduce((sum, r) => 
                    sum + (r.small1Sold || 0) + (r.small2Sold || 0) + (r.medium1Sold || 0) + 
                    (r.medium2Sold || 0) + (r.large1Sold || 0) + (r.large2Sold || 0) + 
                    (r.xlarge1Sold || 0) + (r.xlarge2Sold || 0), 0);
                
                const total = totalLost + totalGiven + totalSold;
                
                if (total > 0) {
                    const lossCanvas = await createSimpleChart(
                        'pie',
                        [totalLost, totalGiven, totalSold],
                        ['Perdus', 'Donnés', 'Vendus'],
                        [
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(168, 85, 247, 0.8)',
                            'rgba(16, 185, 129, 0.8)'
                        ],
                        'Pertes, dons et ventes'
                    );
                    
                    if (lossCanvas) {
                        charts.push({
                            title: "ANALYSE PERTES/DONS",
                            canvas: lossCanvas,
                            width: 180,
                            height: 120
                        });
                        console.log("Graphique pertes généré");
                    }
                } else {
                    console.log("Pas de données pour générer le graphique pertes");
                }
            } catch (error) {
                console.error("Erreur graphique pertes:", error);
            }
        }
        
        // 5. GRAPHIQUE TAUX DE CROISSANCE
        if (chartOptions.chartGrowth) {
            try {
                const recordsWithGrowth = records.filter(r => 
                    (r.growthRate !== undefined && r.growthRate > 0) || 
                    (r.lossRate !== undefined && r.lossRate > 0)
                );
                
                if (recordsWithGrowth.length > 0) {
                    // Prendre les 6 derniers avec taux
                    const recentGrowth = recordsWithGrowth.slice(0, Math.min(6, recordsWithGrowth.length)).reverse();
                    
                    if (recentGrowth.length >= 2) {
                        const dates = recentGrowth.map(r => {
                            const d = new Date(r.startDate);
                            return `${d.getDate()}/${d.getMonth() + 1}`;
                        });
                        
                        const growthRates = recentGrowth.map(r => r.growthRate || 0);
                        const lossRates = recentGrowth.map(r => r.lossRate || 0);
                        
                        // Créer un graphique à barres groupées
                        const growthCanvas = document.createElement('canvas');
                        growthCanvas.width = 600;
                        growthCanvas.height = 400;
                        const ctx = growthCanvas.getContext('2d');
                        
                        new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: dates,
                                datasets: [
                                    {
                                        label: 'Croissance %',
                                        data: growthRates,
                                        backgroundColor: 'rgba(16, 185, 129, 0.8)',
                                        borderColor: 'rgb(16, 185, 129)',
                                        borderWidth: 1
                                    },
                                    {
                                        label: 'Perte %',
                                        data: lossRates,
                                        backgroundColor: 'rgba(239, 68, 68, 0.8)',
                                        borderColor: 'rgb(239, 68, 68)',
                                        borderWidth: 1
                                    }
                                ]
                            },
                            options: {
                                responsive: false,
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Taux de croissance et perte',
                                        font: { size: 14, weight: 'bold' }
                                    }
                                },
                                scales: {
                                    y: {
                                        beginAtZero: true,
                                        title: {
                                            display: true,
                                            text: 'Pourcentage (%)'
                                        }
                                    }
                                }
                            }
                        });
                        
                        setTimeout(() => {
                            charts.push({
                                title: "TAUX DE CROISSANCE ET PERTE",
                                canvas: growthCanvas,
                                width: 180,
                                height: 120
                            });
                            console.log("Graphique croissance généré");
                        }, 100);
                    }
                } else {
                    console.log("Pas de données de croissance");
                }
            } catch (error) {
                console.error("Erreur graphique croissance:", error);
            }
        }
        
    } catch (error) {
        console.error("Erreur générale génération graphiques:", error);
    }
    
    console.log(`Total graphiques générés: ${charts.length}`);
    return charts;
}

