function createGrowthChart(records) {
    return new Promise((resolve) => {
        try {
            const canvas = document.createElement('canvas');
            canvas.width = 800;
            canvas.height = 450;
            const ctx = canvas.getContext('2d');
            
            // Calcu 
            let totalGrowth = 0, totalLoss = 0, count = 0;
            records.forEach(record => {
                if (record.growthRate !== undefined) {
                    totalGrowth += record.growthRate || 0;
                    totalLoss += record.lossRate || 0;
                    count++;
                }
            });
            
            const avgGrowth = count > 0 ? totalGrowth / count : 0;
            const avgLoss = count > 0 ? totalLoss / count : 0;
            
            new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Taux de croissance', 'Taux de perte', 'Impact net'],
                    datasets: [{
                        label: 'Performances',
                        data: [avgGrowth, avgLoss, avgGrowth - avgLoss],
                        backgroundColor: 'rgba(59, 130, 246, 0.2)',
                        borderColor: 'rgb(59, 130, 246)',
                        borderWidth: 3,
                        pointBackgroundColor: 'rgb(59, 130, 246)',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2
                    }]
                },
                options: {
                    responsive: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Analyse des taux de croissance et perte',
                            font: { size: 16, weight: 'bold' }
                        }
                    },
                    scales: {
                        r: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value + '%';
                                }
                            }
                        }
                    }
                }
            });
            
            resolve(canvas);
        } catch (error) {
            console.error("Erreur création graphique croissance:", error);
            resolve(null);
        }
    });
}
      // Fonct 
function drawSimpleSalesChart(doc, records, x, y) {
    try {
        // Cal 
        let smallSold = 0, mediumSold = 0, largeSold = 0;
        records.forEach(record => {
            smallSold += record.smallSold || 0;
            mediumSold += record.mediumSold || 0;
            largeSold += record.largeSold || 0;
        });
        
        const maxSales = Math.max(smallSold, mediumSold, largeSold);
        const barWidth = 40;
        const maxHeight = 50;
        
        // Titre
        doc.setFontSize(12);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(30, 41, 59);
        doc.text("Ventes par catégorie", x, y);
        y += 10;
        
        // Lég e
        doc.setFontSize(9);
        doc.setFont("helvetica", "normal");
        
        // Barre  
        const smallHeight = maxSales > 0 ? (smallSold / maxSales) * maxHeight : 0;
        doc.setFillColor(59, 130, 246);
        doc.rect(x, y + maxHeight - smallHeight, barWidth, smallHeight, 'F');
        doc.text("Petits", x + barWidth/2, y + maxHeight + 5, { align: 'center' });
        doc.text(smallSold.toString(), x + barWidth/2, y + maxHeight - smallHeight - 5, { align: 'center' });
        
        // Barre  
        const mediumHeight = maxSales > 0 ? (mediumSold / maxSales) * maxHeight : 0;
        doc.setFillColor(16, 185, 129);
        doc.rect(x + barWidth + 10, y + maxHeight - mediumHeight, barWidth, mediumHeight, 'F');
        doc.text("Moyens", x + barWidth + 10 + barWidth/2, y + maxHeight + 5, { align: 'center' });
        doc.text(mediumSold.toString(), x + barWidth + 10 + barWidth/2, y + maxHeight - mediumHeight - 5, { align: 'center' });
        
        // Barre gros
        const largeHeight = maxSales > 0 ? (largeSold / maxSales) * maxHeight : 0;
        doc.setFillColor(245, 158, 11);
        doc.rect(x + (barWidth + 10) * 2, y + maxHeight - largeHeight, barWidth, largeHeight, 'F');
        doc.text("Gros", x + (barWidth + 10) * 2 + barWidth/2, y + maxHeight + 5, { align: 'center' });
        doc.text(largeSold.toString(), x + (barWidth + 10) * 2 + barWidth/2, y + maxHeight - largeHeight - 5, { align: 'center' });
        
    } catch (error) {
        console.error("Erreur dessin graphique ventes:", error);
    }
}

function drawSimpleEvolutionChart(doc, records, x, y) {
    try {
        // Pr 
        const recentRecords = records.slice(0, 5).reverse();
        if (recentRecords.length === 0) return;
        
        //  
        doc.setFontSize(12);
        doc.setFont("helvetica", "bold");
        doc.setTextColor(30, 41, 59);
        doc.text("Évolution récente", x, y);
        y += 10;
        
        const chartWidth = 150;
        const chartHeight = 50;
        const pointRadius = 2;
        
        // Tr 
        let maxStock = 0;
        let maxSold = 0;
        
        recentRecords.forEach(record => {
            const stock = record.initialStock || 0;
            const sold = (record.smallSold || 0) + (record.mediumSold || 0) + (record.largeSold || 0);
            if (stock > maxStock) maxStock = stock;
            if (sold > maxSold) maxSold = sold;
        });
        
        const maxValue = Math.max(maxStock, maxSold);
        
        // D 
        doc.setDrawColor(200, 200, 200);
        for (let i = 0; i <= 4; i++) {
            const lineY = y + chartHeight - (i * chartHeight / 4);
            doc.line(x, lineY, x + chartWidth, lineY);
        }
        
        // Dessiner les points et lignes
        recentRecords.forEach((record, index) => {
            const stock = record.initialStock || 0;
            const sold = (record.smallSold || 0) + (record.mediumSold || 0) + (record.largeSold || 0);
            
            const xPos = x + (index * chartWidth / (recentRecords.length - 1));
            const stockY = y + chartHeight - (stock / maxValue) * chartHeight;
            const soldY = y + chartHeight - (sold / maxValue) * chartHeight;
            
            // Points stock (bleu)
            doc.setFillColor(59, 130, 246);
            doc.circle(xPos, stockY, pointRadius, 'F');
            
            // Points ventes (vert)
            doc.setFillColor(16, 185, 129);
            doc.circle(xPos, soldY, pointRadius, 'F');
            
            // Relier les points
            if (index > 0) {
                const prevStockY = y + chartHeight - ((recentRecords[index-1].initialStock || 0) / maxValue) * chartHeight;
                const prevSoldY = y + chartHeight - (((recentRecords[index-1].smallSold || 0) + 
                                                     (recentRecords[index-1].mediumSold || 0) + 
                                                     (recentRecords[index-1].largeSold || 0)) / maxValue) * chartHeight;
                
                //  
                doc.setDrawColor(59, 130, 246);
                doc.line(x - (chartWidth / (recentRecords.length - 1)), prevStockY, xPos, stockY);
                
                // Ligne ventes (vert)
                doc.setDrawColor(16, 185, 129);
                doc.line(x - (chartWidth / (recentRecords.length - 1)), prevSoldY, xPos, soldY);
            }
            
            
            if (index === 0 || index === recentRecords.length - 1) {
                const date = new Date(record.startDate);
                const dateStr = `${date.getDate()}/${date.getMonth() + 1}`;
                doc.setFontSize(8);
                doc.setTextColor(100, 100, 100);
                doc.text(dateStr, xPos, y + chartHeight + 8, { align: 'center' });
            }
        });
        
        //  
        doc.setFontSize(9);
        doc.setTextColor(59, 130, 246);
        doc.text("● Stock", x + 10, y + chartHeight + 20);
        doc.setTextColor(16, 185, 129);
        doc.text("● Ventes", x + 60, y + chartHeight + 20);
        
    } catch (error) {
        console.error("Erreur dessin graphique évolution:", error);
    }
}
      
