                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.3
                        }
                    ]
                },
                options: {
                    responsive: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Évolution des stocks et ventes',
                            font: { size: 16, weight: 'bold' }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Nombre de poulets'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Dates'
                            }
                        }
                    }
                }
            });
            
            resolve(canvas);
        } catch (error) {
            console.error("Erreur création graphique évolution:", error);
            resolve(null);
        }
    });
}

function createRevenueChart(records) {
    return new Promise((resolve) => {
        try {
            const canvas = document.createElement('canvas');
            canvas.width = 800;
            canvas.height = 450;
            const ctx = canvas.getContext('2d');
            
            // Calculer les revenus par catégorie
            let smallRevenue = 0, mediumRevenue = 0, largeRevenue = 0;
            records.forEach(record => {
                smallRevenue += (record.smallSold || 0) * (record.smallPrice || 0);
                mediumRevenue += (record.mediumSold || 0) * (record.mediumPrice || 0);
                largeRevenue += (record.largeSold || 0) * (record.largePrice || 0);
            });
            
            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Petits poulets', 'Poulets moyens', 'Gros poulets'],
                    datasets: [{
                        data: [smallRevenue, mediumRevenue, largeRevenue],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)'
                        ],
                        borderColor: [
                            'rgb(59, 130, 246)',
                            'rgb(16, 185, 129)',
                            'rgb(245, 158, 11)'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: false,
                    plugins: {
                        title: {
                            display: true,
                            text: 'Répartition du chiffre d\'affaires',
                            font: { size: 16, weight: 'bold' }
                        },
                        legend: {
                            position: 'right',
                            labels: { font: { size: 12 } }
                        },
                        datalabels: {
                            color: '#fff',
                            font: { weight: 'bold', size: 14 },
                            formatter: (value, context) => {
                                const total = smallRevenue + mediumRevenue + largeRevenue;
                                const percentage = Math.round((value / total) * 100);
                                return percentage + '%';
                            }
                        }
                    }
                },
                plugins: [ChartDataLabels]
            });
            
            resolve(canvas);
        } catch (error) {
            console.error("Erreur création graphique revenus:", error);
            resolve(null);
        }
    });
}

