// Fonction pour charger les données depuis Firestore
function loadProductionData(productionId) {
    console.log('Chargement depuis Firestore:', productionId);
    
    db.collection('poulailler_records').doc(productionId).get()
        .then(doc => {
            if (!doc.exists) {
                throw new Error('Production non trouvée');
            }
            
            const productionData = doc.data();
            const date = new Date(productionData.startDate);
            const dateStr = `${date.getDate()}/${date.getMonth()+1}/${date.getFullYear()}`;
            
            // Calculer le revenue
            const revenue = calculateProductionRevenue(productionData);
            
            // Stocker globalement
            currentExpenseProduction = {
                id: productionId,
                data: productionData,
                revenue: revenue
            };
            
            console.log('Données chargées depuis Firestore:', currentExpenseProduction);
            
            // Afficher les détails
            showProductionDetails(dateStr, productionData.initialStock || 0, revenue);
            
            // Vérifier les dépenses e xistantes
            checkExpensesForProduction(productionId);
            
        }).catch(error => {
            console.error('Erreur chargement Firestore:', error);
            showMessage('Erreur: ' + error.message, 'error');
        });
}

