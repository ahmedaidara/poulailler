// FONCTION POUR METTRE À JOUR LA PRODUCTION
// ==============================================

async function updateProductionAfterDistribution(productionId, sacreCoeurCats, keurMassarCats) {
    try {
        const productionRef = db.collection('poulailler_records').doc(productionId);
        const productionDoc = await productionRef.get();
        
        if (!productionDoc.exists) {
            console.error('Production non trouvée');
            return;
        }
        
        const production = productionDoc.data();
        const updates = {};
        
        // MAPPING des catégories aux champs de production
        const categoryMapping = {
            '1': { qtyField: 'small1Quantity', soldField: 'small1Sold' },
            '2': { qtyField: 'small2Quantity', soldField: 'small2Sold' },
            '3': { qtyField: 'medium1Quantity', soldField: 'medium1Sold' },
            '4': { qtyField: 'medium2Quantity', soldField: 'medium2Sold' },
            '5': { qtyField: 'large1Quantity', soldField: 'large1Sold' },
            '6': { qtyField: 'large2Quantity', soldField: 'large2Sold' },
            '7': { qtyField: 'xlarge1Quantity', soldField: 'xlarge1Sold' },
            '8': { qtyField: 'xlarge2Quantity', soldField: 'xlarge2Sold' }
        };
        
        // Pour chaque catégorie, calculer combien a été distribué
        Object.keys(categoryMapping).forEach(catId => {
            const catDistributed = 
                (sacreCoeurCats[catId] || 0) + 
                (keurMassarCats[catId] || 0);
            
            if (catDistributed > 0) {
                const mapping = categoryMapping[catId];
                const currentQuantity = production[mapping.qtyField] || 0;
                const currentSold = production[mapping.soldField] || 0;
                
                // La nouvelle quantité disponible = quantité initiale - déjà vendu - distribué
                const newQuantity = Math.max(0, currentQuantity - currentSold - catDistributed);
                updates[mapping.qtyField] = newQuantity;
                
                console.log(`Catégorie ${catId}: ${currentQuantity} - ${currentSold} - ${catDistributed} = ${newQuantity}`);
            }
        });
        
        // Mettre à jour le stock initial TOTAL
        let totalDistributed = 0;
        for (let catId in sacreCoeurCats) totalDistributed += sacreCoeurCats[catId];
        for (let catId in keurMassarCats) totalDistributed += keurMassarCats[catId];
        
        const currentInitial = production.initialStock || 0;
        const currentSold = (production.small1Sold || 0) + (production.small2Sold || 0) +
                           (production.medium1Sold || 0) + (production.medium2Sold || 0) +
                           (production.large1Sold || 0) + (production.large2Sold || 0) +
                           (production.xlarge1Sold || 0) + (production.xlarge2Sold || 0);
        
        const newInitial = Math.max(0, currentInitial - currentSold - totalDistributed);
        updates.initialStock = newInitial;
        
        // Mettre à jour les métadonnées
        updates.lastDistributionDate = new Date().toISOString();
        updates.updatedAt = firebase.firestore.FieldValue.serverTimestamp();
        
        console.log('Mises à jour production:', updates);
        
        // Appliquer les mises à jour
        await productionRef.update(updates);
        console.log('✅ Production mise à jour dans Firebase');
        
    } catch (error) {
        console.error('Erreur mise à jour production:', error);
        throw error;
    }
}

