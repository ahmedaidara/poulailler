// Charger les statistiques
function loadStats() {
    // Déterminer la période
    let startDate, endDate;
    const today = new Date();
    
    switch(currentStatsPeriod) {
        case 'month':
            startDate = new Date(today.getFullYear(), today.getMonth(), 1);
            endDate = new Date(today.getFullYear(), today.getMonth() + 1, 0);
            break;
        case 'last-month':
            startDate = new Date(today.getFullYear(), today.getMonth() - 1, 1);
            endDate = new Date(today.getFullYear(), today.getMonth(), 0);
            break;
        case 'year':
            startDate = new Date(today.getFullYear(), 0, 1);
            endDate = new Date(today.getFullYear(), 11, 31);
            break;
        case 'custom':
            if (!currentStatsStartDate || !currentStatsEndDate) return;
            startDate = currentStatsStartDate;
            endDate = currentStatsEndDate;
            break;
        case 'all':
        default:
            startDate = null;
            endDate = null;
    }
    
    // Préparer la requête
    let invoicesQuery = db.collection('invoices');
    
    // Filtrer par boutique si spécifié
    if (currentStatsBoutique !== 'all') {
        invoicesQuery = invoicesQuery.where('boutique', '==', currentStatsBoutique);
    }
    
    // Exécuter la requête
    invoicesQuery.get()
        .then(snapshot => {
            let totalRevenue = 0;
            let totalInvoices = 0;
            let totalChickens = 0;
            let boutiqueStats = {
                'sacre-coeur': { revenue: 0, invoices: 0, chickens: 0 },
                'keur-massar': { revenue: 0, invoices: 0, chickens: 0 }
            };
            
            snapshot.forEach(doc => {
                const invoice = doc.data();
                const invoiceDate = invoice.date?.toDate ? invoice.date.toDate() : new Date(invoice.date);
                
                // Filtrer par période si nécessaire
                if (startDate && endDate) {
                    if (invoiceDate < startDate || invoiceDate > endDate) {
                        return; // Skip cette facture
                    }
                }
                
                // Accumuler les totaux
                totalRevenue += invoice.total || 0;
                totalInvoices++;
                
                // Compter les poulets
                if (invoice.items) {
                    invoice.items.forEach(item => {
                        totalChickens += item.quantity || 0;
                    });
                }
                
                // Statistiques par boutique
                if (invoice.boutique) {
                    if (!boutiqueStats[invoice.boutique]) {
                        boutiqueStats[invoice.boutique] = { revenue: 0, invoices: 0, chickens: 0 };
                    }
                    
                    boutiqueStats[invoice.boutique].revenue += invoice.total || 0;
                    boutiqueStats[invoice.boutique].invoices++;
                    
                    if (invoice.items) {
                        invoice.items.forEach(item => {
                            boutiqueStats[invoice.boutique].chickens += item.quantity || 0;
                        });
                    }
                }
            });
            
            // Mettre à jour l'interface
            document.getElementById('totalRevenueStats').textContent = totalRevenue.toLocaleString('fr-FR') + ' F CFA';
            document.getElementById('totalInvoicesStats').textContent = totalInvoices;
            document.getElementById('avgInvoiceStats').textContent = totalInvoices > 0 ? 
                Math.round(totalRevenue / totalInvoices).toLocaleString('fr-FR') + ' F CFA' : '0 F CFA';
            document.getElementById('totalChickensSoldStats').textContent = totalChickens;
            
            // Mettre à jour les détails par boutique
            updateBoutiqueStatsDetails(boutiqueStats);
            
        }).catch(error => {
            console.error('Erreur chargement stats:', error);
        });
}

