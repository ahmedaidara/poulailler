// Vue globale de toutes les dépenses
function showAllExpensesView() {
    db.collection('expenses')
        .orderBy('createdAt', 'desc')
        .get()
        .then(snapshot => {
            let totalGlobalExpenses = 0;
            let totalGlobalRevenue = 0;
            let expensesByProduction = {};
            
            snapshot.forEach(doc => {
                const expense = doc.data();
                totalGlobalExpenses += expense.totalExpense || 0;
                
                // Trouver la production pour récupérer le CA
                db.collection('poulailler_records').doc(expense.productionId).get()
                    .then(prodDoc => {
                        if (prodDoc.exists) {
                            const prod = prodDoc.data();
                            const revenue = (prod.small1Sold || 0) * (prod.small1Price || 0) +
                                          (prod.small2Sold || 0) * (prod.small2Price || 0) +
                                          (prod.medium1Sold || 0) * (prod.medium1Price || 0) +
                                          (prod.medium2Sold || 0) * (prod.medium2Price || 0) +
                                          (prod.large1Sold || 0) * (prod.large1Price || 0) +
                                          (prod.large2Sold || 0) * (prod.large2Price || 0) +
                                          (prod.xlarge1Sold || 0) * (prod.xlarge1Price || 0) +
                                          (prod.xlarge2Sold || 0) * (prod.xlarge2Price || 0);
                            
                            totalGlobalRevenue += revenue;
                            
                            // Stocker par production
                            if (!expensesByProduction[expense.productionId]) {
                                const prodDate = new Date(prod.startDate);
