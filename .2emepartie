// Variables globales pour la distribution
let currentProductionForDistribution = null;
let distributionData = {
    sacreCoeur: {},
    keurMassar: {}
};

// Charger les productions pour distribution
function loadProductionsForDistribution() {
    const select = document.getElementById('selectProductionDist');
    select.innerHTML = '<option value="">-- Choisir une production --</option>';
    
    db.collection('poulailler_records')
        .orderBy('startDate', 'desc')
        .limit(20)
        .get()
        .then(snapshot => {
            snapshot.forEach(doc => {
                const production = doc.data();
                const date = new Date(production.startDate);
                const dateStr = `${date.getDate()}/${date.getMonth()+1}/${date.getFullYear()}`;
                
                // Calculer le stock disponible réel
                const stockInitial = production.initialStock || 0;
                const totalSold = (production.small1Sold || 0) + (production.small2Sold || 0) +
                                 (production.medium1Sold || 0) + (production.medium2Sold || 0) +
                                 (production.large1Sold || 0) + (production.large2Sold || 0) +
                                 (production.xlarge1Sold || 0) + (production.xlarge2Sold || 0);
                const totalLostGiven = (production.lost || 0) + (production.given || 0);
                const stockRestant = Math.max(0, stockInitial - totalSold - totalLostGiven);
                
                // Vérifier si déjà distribué
                const option = document.createElement('option');
                option.value = doc.id;
                option.textContent = `Production du ${dateStr} - ${stockRestant} poulets restants`;
                
                // Stocker les données dans l'option
                option.dataset.production = JSON.stringify({
                    id: doc.id,
                    data: production,
                    stockRestant: stockRestant
                });
                
                select.appendChild(option);
            });
        });
}

// Initialiser la distribution
