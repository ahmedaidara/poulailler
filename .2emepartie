function loadInvoices(filter = 'all') {
    console.log('Chargement factures avec filtre:', filter);
    
    // Initialiser la requête
    let query = db.collection('invoices');
    
    // Appliquer les filtres boutique
    if (filter === 'sacre-coeur') {
        query = query.where('boutique', '==', 'sacre-coeur');
    } else if (filter === 'keur-massar') {
        query = query.where('boutique', '==', 'keur-massar');
    }
    
    // Trier par date
    query = query.orderBy('date', 'desc');
    
    query.get().then(snapshot => {
        console.log(`Nombre de factures trouvées: ${snapshot.size}`);
        const tbody = document.getElementById('invoicesTableBody');
        const emptyState = document.getElementById('emptyInvoices');
        
        tbody.innerHTML = '';
        
        if (snapshot.empty) {
            console.log('Aucune facture trouvée');
            tbody.style.display = 'none';
            emptyState.style.display = 'block';
            return;
        }
        
        tbody.style.display = 'table-row-group';
        emptyState.style.display = 'none';
        
        // Calculer les dates pour les filtres
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        
        const weekAgo = new Date();
        weekAgo.setDate(weekAgo.getDate() - 7);
        weekAgo.setHours(0, 0, 0, 0);
        
        let displayedCount = 0;
        
        snapshot.forEach(doc => {
            const invoice = doc.data();
            
            // Récupérer la date
            let date;
            if (invoice.date && invoice.date.seconds) {
                date = new Date(invoice.date.seconds * 1000);
            } else if (invoice.date) {
                date = new Date(invoice.date);
            } else {
                date = new Date();
            }
            
            // Appliquer les filtres temporels
            if (filter === 'today') {
                const invoiceDay = new Date(date);
                invoiceDay.setHours(0, 0, 0, 0);
                if (invoiceDay.getTime() !== today.getTime()) {
                    return; // Skip cette facture
                }
            }
            
            if (filter === 'week') {
                const invoiceDay = new Date(date);
                invoiceDay.setHours(0, 0, 0, 0);
                if (invoiceDay < weekAgo) {
                    return; // Skip cette facture
                }
            }
            
            displayedCount++;
            
            const row = document.createElement('tr');
            row.innerHTML = `
                <td>${invoice.invoiceNumber || 'N/A'}</td>
                <td>
                    <span class="boutique-badge ${invoice.boutique === 'sacre-coeur' ? 'badge-sacre-coeur' : 'badge-keur-massar'}">
                        ${invoice.boutique === 'sacre-coeur' ? 'Sacré Coeur 3' : 'Keur Massar'}
                    </span>
                </td>
                <td>${formatDate(date)}</td>
                <td>${invoice.client?.name || 'Non renseigné'}</td>
                <td>${invoice.client?.phone || '--'}</td>
                <td>${(invoice.total || 0).toLocaleString('fr-FR')} F CFA</td>
                <td>
                    <div class="action-buttons">
                        <button class="action-btn-small view" onclick="viewInvoiceDetail('${doc.id}')">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button class="action-btn-small delete" onclick="deleteInvoice('${doc.id}')">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            `;
            
            tbody.appendChild(row);
        });
        
        console.log(`Factures affichées: ${displayedCount}`);
        
        // Si rien n'est affiché après filtrage
        if (displayedCount === 0) {
            tbody.style.display = 'none';
            emptyState.style.display = 'block';
        }
        
    }).catch(error => {
        console.error('Erreur chargement factures:', error);
        
    });
}

