function setupDistributionForm() {
    if (!currentProductionForDistribution) return;
    
    const production = currentProductionForDistribution.data;
    
    // Les 8 catégories
    const categories = [
        { id: 1, name: 'Très petits (1-1.1 kg)', qtyField: 'small1Quantity', soldField: 'small1Sold' },
        { id: 2, name: 'Petits (1.2 kg)', qtyField: 'small2Quantity', soldField: 'small2Sold' },
        { id: 3, name: 'Moyens-petits (1.3-1.4 kg)', qtyField: 'medium1Quantity', soldField: 'medium1Sold' },
        { id: 4, name: 'Moyens (1.5-1.6 kg)', qtyField: 'medium2Quantity', soldField: 'medium2Sold' },
        { id: 5, name: 'Moyens-grands (1.7-1.9 kg)', qtyField: 'large1Quantity', soldField: 'large1Sold' },
        { id: 6, name: 'Grands (2 kg)', qtyField: 'large2Quantity', soldField: 'large2Sold' },
        { id: 7, name: 'Très grands (2.1-2.3 kg)', qtyField: 'xlarge1Quantity', soldField: 'xlarge1Sold' },
        { id: 8, name: 'Géants (+2.4 kg)', qtyField: 'xlarge2Quantity', soldField: 'xlarge2Sold' }
    ];
    
    // Afficher les catégories disponibles
    let categoriesHTML = '';
    let sacreCoeurHTML = '';
    let keurMassarHTML = '';
    
    // CALCULER LE STOCK DISPONIBLE TOTAL POUR LA PRODUCTION
    const stockInitialTotal = production.initialStock || 0;
    const totalSold = categories.reduce((sum, cat) => {
        return sum + (production[cat.soldField] || 0);
    }, 0);
    const totalLostGiven = (production.lost || 0) + (production.given || 0);
    const stockDisponibleTotal = Math.max(0, stockInitialTotal - totalSold - totalLostGiven);
    
    // Mettre à jour le stock total affiché
    document.getElementById('globalStockTotal').textContent = stockDisponibleTotal;
    document.getElementById('remainingToDistribute').textContent = stockDisponibleTotal;
    
    categories.forEach(cat => {
        // STOCK DISPONIBLE RÉEL = Quantité initiale - Déjà vendu
        const stockInitial = production[cat.qtyField] || 0;
        const dejaVendu = production[cat.soldField] || 0;
        const disponible = Math.max(0, stockInitial - dejaVendu);
        
        console.log(`Catégorie ${cat.id}: ${stockInitial} - ${dejaVendu} = ${disponible} disponibles`);
        
        // Stocker la disponibilité
        distributionData.categories = distributionData.categories || {};
        distributionData.categories[cat.id] = disponible;
        
        // HTML pour la disponibilité
        categoriesHTML += `
            <div style="margin-bottom: var(--space-md); padding: var(--space-md); background: white; border-radius: var(--radius-md);">
                <div style="display: flex; justify-content: space-between; margin-bottom: var(--space-sm);">
                    <strong>${cat.name}</strong>
                    <span style="color: ${disponible > 0 ? 'var(--secondary)' : 'var(--danger)'};">${disponible} disponibles</span>
                </div>
            </div>
        `;
        
        // Input pour Sacré Coeur
        sacreCoeurHTML += `
            <div class="form-group" style="margin-bottom: var(--space-sm);">
                <label style="font-size: 0.9rem;">${cat.name}</label>
                <input type="number" 
                       class="form-input distribution-input" 
                       data-category="${cat.id}" 
                       data-boutique="sacreCoeur"
                       min="0" 
                       max="${disponible}"
                       value="0"
                       style="padding: var(--space-sm);">
            </div>
        `;
        
        // Input pour Keur Massar
        keurMassarHTML += `
            <div class="form-group" style="margin-bottom: var(--space-sm);">
                <label style="font-size: 0.9rem;">${cat.name}</label>
                <input type="number" 
                       class="form-input distribution-input" 
                       data-category="${cat.id}" 
                       data-boutique="keurMassar"
                       min="0" 
                       max="${disponible}"
                       value="0"
                       style="padding: var(--space-sm);">
            </div>
        `;
    });
    
    document.getElementById('distributionCategories').innerHTML = categoriesHTML;
    document.getElementById('distributionSacreCoeur').innerHTML = sacreCoeurHTML;
    document.getElementById('distributionKeurMassar').innerHTML = keurMassarHTML;
    
    // Mettre à jour les totaux
    updateDistributionTotals();
    
    // Événements sur les inputs
    document.querySelectorAll('.distribution-input').forEach(input => {
        input.addEventListener('input', updateDistributionTotals);
    });
}
      
// Mettre à jour les totaux de distribution
function updateDistributionTotals() {
    let totalSacreCoeur = 0;
    let totalKeurMassar = 0;
    
    // Compter Sacré Coeur
    document.querySelectorAll('.distribution-input[data-boutique="sacreCoeur"]').forEach(input => {
        totalSacreCoeur += parseInt(input.value) || 0;
    });
    
    // Compter Keur Massar
    document.querySelectorAll('.distribution-input[data-boutique="keurMassar"]').forEach(input => {
        totalKeurMassar += parseInt(input.value) || 0;
    });
    
    // Mettre à jour l'affichage
    document.getElementById('totalSacreCoeur').textContent = totalSacreCoeur;
    document.getElementById('totalKeurMassar').textContent = totalKeurMassar;
    
    const totalDistributed = totalSacreCoeur + totalKeurMassar;
    const stockTotal = currentProductionForDistribution.stockRestant;
    const remaining = stockTotal - totalDistributed;
    
    document.getElementById('globalStockTotal').textContent = stockTotal;
    document.getElementById('totalDistributed').textContent = totalDistributed;
    document.getElementById('remainingToDistribute').textContent = remaining;
    
    // Colorer en rouge si dépassement
    if (remaining < 0) {
        document.getElementById('remainingToDistribute').style.color = 'var(--danger)';
        document.getElementById('saveDistributionBtn').disabled = true;
    } else {
        document.getElementById('remainingToDistribute').style.color = remaining > 0 ? 'var(--warning)' : 'var(--secondary)';
        document.getElementById('saveDistributionBtn').disabled = false;
    }
}

async function saveDistribution() {
    if (!currentProductionForDistribution) return;
    
    const distribution = {
        productionId: currentProductionForDistribution.id,
        productionDate: currentProductionForDistribution.data.startDate,
        date: new Date().toISOString(),
        sacreCoeur: {},
        keurMassar: {},
        totalDistributed: 0,
        createdAt: firebase.firestore.FieldValue.serverTimestamp()
    };
    
    // Récupérer les quantités pour Sacré Coeur
    let totalSacreCoeur = 0;
    document.querySelectorAll('.distribution-input[data-boutique="sacreCoeur"]').forEach(input => {
        const categoryId = input.getAttribute('data-category');
        const quantity = parseInt(input.value) || 0;
        if (quantity > 0) {
            distribution.sacreCoeur[categoryId] = quantity;
            totalSacreCoeur += quantity;
        }
    });
    
    // Récupérer les quantités pour Keur Massar
