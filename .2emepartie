                const date = new Date(r.startDate);
                return `${date.getDate()}/${date.getMonth() + 1}`;
            });
            
            const stockData = recentRecords.map(r => r.initialStock || 0);
            const soldData = recentRecords.map(r => 
                (r.smallSold || 0) + (r.mediumSold || 0) + (r.largeSold || 0)
            );
            
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [
                        {
