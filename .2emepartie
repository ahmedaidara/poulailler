// Calculer ligne simple
function calculateSimpleRow(input) {
    const row = input.closest('tr');
    const qty = parseFloat(row.querySelector('.simple-expense-qty').value) || 0;
    const price = parseFloat(row.querySelector('.simple-expense-price').value) || 0;
    const total = qty * price;
    
    row.querySelector('.simple-expense-total').value = total.toLocaleString('fr-FR');
    
    calculateSimpleTotals();
}

// Supprimer ligne simple
function removeSimpleRow(button) {
    const row = button.closest('tr');
    if (row) {
        row.remove();
        calculateSimpleTotals();
    }
}

// Calculer totaux simples
function calculateSimpleTotals() {
    let totalExpense = 0;
    
    // Total dépenses
    document.querySelectorAll('.simple-expense-total').forEach(input => {
        const value = input.value.replace(/\s/g, '').replace('FCFA', '') || '0';
        totalExpense += parseFloat(value) || 0;
    });
    
    // CA utilisé
    const customCA = document.getElementById('customCA');
    const usedCA = customCA.value ? parseFloat(customCA.value) : currentExpenseProduction.revenue;
    
    // Bénéfice net
    const netProfit = usedCA - totalExpense;
    
    // Mettre à jour l'affichage
    document.getElementById('simpleTotalExpense').value = totalExpense.toLocaleString('fr-FR') + ' F CFA';
    document.getElementById('totalExpensesShow').textContent = totalExpense.toLocaleString('fr-FR') + ' F CFA';
    document.getElementById('usedCA').textContent = usedCA.toLocaleString('fr-FR') + ' F CFA';
    
    const netProfitElem = document.getElementById('netProfitShow');
    netProfitElem.textContent = netProfit.toLocaleString('fr-FR') + ' F CFA';
    netProfitElem.style.color = netProfit >= 0 ? '#10B981' : '#EF4444';
}

// Sauvegarder dépense simple
function saveSimpleExpense() {
    if (!currentExpenseProduction) return;
    
    // Récupérer les lignes
    const expenseItems = [];
    let totalExpense = 0;
    
    document.querySelectorAll('#simpleExpenseRows tr').forEach(row => {
        const name = row.querySelector('.simple-expense-name').value.trim();
        const desc = row.querySelector('.simple-expense-desc').value.trim();
        const qty = parseFloat(row.querySelector('.simple-expense-qty').value) || 0;
        const price = parseFloat(row.querySelector('.simple-expense-price').value) || 0;
        const total = qty * price;
        
        if (name && total > 0) {
            expenseItems.push({
                name: name,
                description: desc,
                quantity: qty,
                unitPrice: price,
                total: total
            });
            
            totalExpense += total;
        }
    });
    
    if (expenseItems.length === 0) {
        showMessage('Ajoutez au moins une dépense', 'error');
        return;
    }
    
    // CA personnalisé
    const customCA = document.getElementById('customCA');
    const customRevenue = customCA.value ? parseFloat(customCA.value) : null;
    const usedRevenue = customRevenue || currentExpenseProduction.revenue;
    
    // Notes
    const notes = document.getElementById('expenseNotesField').value.trim();
    
    // Données à sauvegarder
    const expenseData = {
        productionId: currentExpenseProduction.id,
        productionDate: currentExpenseProduction.data.startDate,
        expenseItems: expenseItems,
        totalExpense: totalExpense,
        customRevenue: customRevenue,
        realRevenue: currentExpenseProduction.revenue,
        usedRevenue: usedRevenue,
        netProfit: usedRevenue - totalExpense,
        notes: notes,
        createdAt: firebase.firestore.FieldValue.serverTimestamp(),
        updatedAt: firebase.firestore.FieldValue.serverTimestamp()
    };
    
    console.log('Sauvegarde dépense:', expenseData);
    
    // Sauvegarder
    db.collection('expenses').add(expenseData)
        .then(() => {
            showMessage('✓ Dépense enregistrée!', 'success');
            loadProductionsForExpenses();
        })
        .catch(error => {
            console.error('Erreur sauvegarde:', error);
            showMessage('Erreur: ' + error.message, 'error');
        });
}

